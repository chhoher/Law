<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- add By Jia 2017-06-29 文管新增債讓的相對人 -->
<hibernate-mapping>
    <class name="com.myjs.doc.documents.model.LDocDebtsRela" table="L_DOC_DEBTS_RELA" schema="dbo" catalog="Legal" optimistic-lock="version">
        <id name="debtsRelaId" type="string">
            <column name="debts_rela_id"/>
            <generator class="uuid" />
        </id>
		<property name="ID" type="string">
			<column name="ID" length="10" />
		</property>
		<property name="name" type="string">
			<column name="name" length="15"/>
		</property>
		<property name="debtsId" type="int">
			<column name="debts_id" />
		</property>
	</class>
</hibernate-mapping>
